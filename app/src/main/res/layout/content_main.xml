<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/app_bar_main"
    tools:context="com.rigobertosl.nevergiveapp.MainActivity"
    android:orientation="vertical">

    <ScrollView
        android:id="@+id/init_scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TableLayout
            android:id="@+id/init_table"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/foods_row"
                style="@style/ApartadoInicio">
                <TextView
                    android:id="@+id/foods_text"
                    style="@style/EncabezadoApartadoInicio"
                    android:text="@string/comidas_hoy"/>
                <LinearLayout
                    android:id="@+id/foods_content"
                    style="@style/ContenidoApartadoInicio"/>
            </LinearLayout>

            <LinearLayout
            android:id="@+id/train_row"
                style="@style/ApartadoInicio">
            <TextView
                android:id="@+id/train_text"
                style="@style/EncabezadoApartadoInicio"
                android:text="@string/tablas_entrenamiento"/>
            <LinearLayout
                android:id="@+id/train_content"
                style="@style/ContenidoApartadoInicio"/>
        </LinearLayout>

            <LinearLayout
                android:id="@+id/events_row"
                style="@style/ApartadoInicio">
                <TextView
                    android:id="@+id/events_text"
                    style="@style/EncabezadoApartadoInicio"
                    android:text="@string/proximos_eventos"/>
                <LinearLayout
                    android:id="@+id/events_content"
                    style="@style/ContenidoApartadoInicio"/>
            </LinearLayout>

            <LinearLayout
                style="@style/ApartadoInicio">
                <TextView
                    android:id="@+id/achievements_text"
                    style="@style/EncabezadoApartadoInicio"
                    android:text="@string/ultimos_logros"/>
                <LinearLayout
                    android:id="@+id/achievements_content"
                    style="@style/ContenidoApartadoInicio"/>
            </LinearLayout>

        </TableLayout>
    </ScrollView>
</LinearLayout>
